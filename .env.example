# Environment Configuration
NODE_ENV=production

# Database
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# External Services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# MarzBan Integration
MARZBAN_BASE_URL=https://your-marzban-server.com
MARZBAN_USERNAME=admin
MARZBAN_PASSWORD=your-marzban-admin-password

# Payment Systems
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SECRET_KEY=your-click-secret-key
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
FRONTEND_URLS=https://yourdomain.com,https://www.yourdomain.com

# Admin Configuration
ADMIN_EMAILS=admin@yourdomain.com,support@yourdomain.com

# SSL/Domain (for production)
DOMAIN=yourdomain.com